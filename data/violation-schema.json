{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ComplianceReport",
  "type": "object",
  "required": ["complianceScore", "status", "violations", "meta"],
  "properties": {
    "complianceScore": { "type": "number", "minimum": 0, "maximum": 100 },
    "status": { "type": "string", "enum": ["pass", "fail"] },
    "violations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "severity",
          "category",
          "offendingText",
          "offendingImageRegion",
          "policyReference",
          "explanation",
          "suggestedFix",
          "confidence"
        ],
        "properties": {
          "id": { "type": "string" },
          "severity": { "type": "string", "enum": ["critical", "warning", "info"] },
          "category": { "type": "string" },
          "offendingText": { "type": "string" },
          "offendingImageRegion": {
            "anyOf": [
              { "type": "null" },
              {
                "type": "object",
                "properties": {
                  "x": { "type": "number" },
                  "y": { "type": "number" },
                  "width": { "type": "number" },
                  "height": { "type": "number" },
                  "label": { "type": "string" }
                }
              }
            ]
          },
          "policyReference": { "type": "string" },
          "explanation": { "type": "string" },
          "suggestedFix": { "type": "string" },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        }
      }
    },
    "meta": {
      "type": "object",
      "required": ["platform", "productCategory", "timestamp"],
      "properties": {
        "platform": { "type": "string" },
        "productCategory": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      }
    }
  }
}

